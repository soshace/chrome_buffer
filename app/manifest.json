{
    "name": "Chrome Sharing Extension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": {
            "24": "images/icon-24.png",
            "32": "images/icon-32.png"
        },
        "default_title": "Chrome Extension"
    },
    "externally_connectable": {
        "matches": [
        ]
    },
    "permissions": [
        "storage",
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "notifications",
        "tabs"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "web_accessible_resources": [
        "fonts/ss-standard.woff",
        "http://fonts.googleapis.com/",
        "https://*.google-analytics.com/**/*",
        "templates/*",
        "styles/overlay.css",
        "bower_components/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "exclude_matches": [
            ],
            "css": [
                "styles/overlay.css",
                "bower_components/slick-carousel/slick/slick-theme.css",
                "bower_components/slick-carousel/slick/slick.css"
            ],
            "js": [
                "bower_components/jquery/dist/jquery.min.js",
                "bower_components/slick-carousel/slick/slick.js",
                "scripts/libs/jquery.loadTemplate-1.5.0.js",
                "scripts/utils.js",
                "scripts/post-storage.js",
                "scripts/text-grabber.js",
                "scripts/chrome-buffer.js",
                "scripts/content.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        },
        {
            "matches": [
                "*://*.facebook.com/*"
            ],
            "js": [
                "bower_components/jquery/dist/jquery.min.js",
                "bower_components/slick-carousel/slick/slick.js",
                "scripts/libs/jquery.loadTemplate-1.5.0.js",
                "scripts/embeds/facebook.js"
            ],
            "css": [
                "styles/overlay.css",
                "styles/facebook.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "exclude_matches": [
                "*://tweetdeck.twitter.com/*"
            ],
            "js": [
                "bower_components/slick-carousel/slick/slick.js",
                "scripts/libs/jquery.loadTemplate-1.5.0.js",
                "scripts/embeds/twitter.js"
            ],
            "css": [
                "styles/twitter.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "bower_components/slick-carousel/slick/slick.js",
                "scripts/libs/jquery.loadTemplate-1.5.0.js",
                "scripts/embeds/linkedin.js"
            ],
            "css": [
                "styles/linkedin.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://plus.google.com/*"
            ],
            "js": [
                "bower_components/slick-carousel/slick/slick.js",
                "scripts/libs/jquery.loadTemplate-1.5.0.js",
                "scripts/embeds/google-plus.js"
            ],
            "css": [
                "styles/google-plus.css"
            ],
            "run_at": "document_end"
        }
    ]
}
